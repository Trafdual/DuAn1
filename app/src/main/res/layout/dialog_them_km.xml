<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Khuyến Mãi"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/edt_chietkhau"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Chiết khấu(%)"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_percent_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_tungay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Từ Ngày"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_denngay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Đến Ngày"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textStyle="bold"
        android:textColorHint="#47C0F6"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:hint="CHỌN ẢNH"
        android:layout_width="130dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/imgthemanhkm"
        android:src="@drawable/ic_baseline_picture_in_picture_24"
        android:layout_marginLeft="120dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Themkm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dialog"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Thêm"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tv_Thoatkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="23dp"/>


</LinearLayout>