<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Sản Phẩm"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/edt_tensp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Tên sản phẩm"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edt_ngaynhap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Ngày Nhập"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edt_mausac"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Màu Sắc"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_color_lens_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edt_soluong"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Số Lượng"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_numbers_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <EditText

        android:id="@+id/edt_gianhap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Gía nhập"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_currency_exchange_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edt_giaban"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Gía bán"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_currency_exchange_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <Spinner
        android:id="@+id/edt_spp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:hint="Gía bán"
        android:textSize="15dp"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:textStyle="bold"
        android:textColorHint="#47C0F6"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:hint="CHỌN ẢNH"
        android:layout_width="200dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/imgthemanhdt"
        android:src="@drawable/ic_baseline_picture_in_picture_24"
        android:layout_marginLeft="130dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_themdt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dialog"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Thêm"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#0C0C0C"
        android:id="@+id/tv_thoatdt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Thoát"
        android:textSize="23dp"
        android:textStyle="bold" />


</LinearLayout>